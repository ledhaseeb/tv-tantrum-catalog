  { name: "TV Watcher", emoji: "", points: 0 },
  { name: "Tablet Baby", emoji: "", points: 25 },
  { name: "TV Tamer", emoji: "", points: 50 },
  { name: "Algorithm Avoider", emoji: "", points: 100 },
