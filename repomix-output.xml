    };
    
    // Calculate points by activity type
    pointsHistory.forEach(entry => {
      switch (entry.activityType) {
        case 'review':
          breakdown.reviews += entry.points;
          break;
        case 'upvote_given':
          breakdown.upvotesGiven += entry.points;
