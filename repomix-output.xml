    console.log(` Updated: ${updatedCount} shows`);
    console.log(` Skipped: ${skippedCount} shows`);
    console.log(` Errors: ${errorCount} shows`);
    console.log(` Total processed: ${shows.length} shows`);
    
  } catch (error) {
